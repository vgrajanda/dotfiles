!! Color Scheme

! special
*.foreground:   #d0d0d0
*.background:   #000000
*.cursorColor:  #d0d0d0

! black
*.color0:       #000000
*.color8:       #808080

! red
*.color1:       #ff0000
*.color9:       #ff0000

! green
*.color2:       #33ff00
*.color10:      #33ff00

! yellow
*.color3:       #ff0099
*.color11:      #ff0099

! blue
*.color4:       #0066ff
*.color12:      #0066ff

! magenta
*.color5:       #cc00ff
*.color13:      #cc00ff

! cyan
*.color6:       #00ffff
*.color14:      #00ffff

! white
*.color7:       #d0d0d0
*.color15:      #ffffff


!! Font configuration

*.font: xft:TerminessTTF Nerd Font:style=Medium:size=13
*.boldFont: xft:TerminessTTF Nerd Font:style=Bold:size=13
*.italicFont: xft:TerminessTTF Nerd Font:style=Italic:size=13
*.boldItalicFont: xft:TerminessTTF Nerd Font:style=Bold Italic:size=13

!! Basic config

! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755: false
URxvt.iso14755_52: false

! Custom bindings
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard

!! URxvt Appearance

URxvt.scrollBar: false
URxvt.geometry: 92x24
URxvt.cursorBlink: true
URxvt.internalBorder: 24
URxvt.depth: 24
